<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="UserForm" type="com.proj.form.UserForm"/>
    </form-beans>
    <global-forwards>
        <forward name="failure" path="/"/>
        <forward name="success" path="/"/>
    </global-forwards>
    <action-mappings>
        <action path="/insert" type="com.proj.action.InsertAction">
            <forward name="success" path="/insert.jsp"/>
        </action>
        <action path="/register" type="com.proj.action.RegisterAction" name="UserForm" validate="true"
                input="/insert.jsp">
            <forward name="success" path="/WEB-INF/success.jsp"/>
            <forward name="failure" path="/WEB-INF/failure.jsp"/>
        </action>
        <action path="/read" type="com.proj.action.ReadAction">
            <forward name="success" path="/read.jsp"/>
        </action>
        <action path="/update" type="com.proj.action.UpdateAction">
            <forward name="success" path="/WEB-INF/update.jsp"/>
        </action>
        <action path="/delete" type="com.proj.action.DeleteAction">
            <forward name="success" path="/WEB-INF/delete.jsp"/>
        </action>

    </action-mappings>
    <message-resources parameter="Messages"/>
</struts-config>